<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learn.NFTActivity"
    android:background="@drawable/bg_bggenerator_com"
    android:id="@+id/root_layout">

    <ImageButton
        android:id="@+id/back_button"
        style="?attr/borderlessButtonStyle"
        android:layout_width="58dp"
        android:layout_margin="6dp"
        android:hapticFeedbackEnabled="true"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back_arrow_button"
        android:src="@drawable/ic_baseline_arrow_back_34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NFT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nft_title"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/NFT_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NFT_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/whats_an_NFT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_outline_textview"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/whats_an_NFT_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/what_is_an_nft_title"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/whats_an_NFT_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="16sp"
                    android:paddingVertical="20dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingHorizontal="15dp"
                    android:paddingBottom="10dp"
                    android:text="@string/what_is_an_NFT_text"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/what_can_i_do_with_an_NFT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_outline_textview"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/whats_an_NFT">

                <TextView
                    android:id="@+id/what_can_i_do_with_an_NFT_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:text="@string/what_can_i_do_with_an_nft_title"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/what_can_i_do_with_an_NFT_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/what_can_i_do_with_an_NFT_text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/where_can_i_find_NFT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_outline_textview"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/what_can_i_do_with_an_NFT">

                <TextView
                    android:id="@+id/where_can_i_find_NFT_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:text="@string/where_can_i_find_nfts_title"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/where_can_i_find_NFT_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/where_can_i_find_NFT_text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/how_can_i_verify_NFT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/rounded_outline_textview"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_marginTop="30dp"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/where_can_i_find_NFT">

                <TextView
                    android:id="@+id/how_can_i_verify_NFT_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingVertical="10dp"
                    android:text="@string/how_can_i_verify_an_nft_title"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/how_can_i_verify_NFT_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/how_can_i_verify_an_nft_text"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>