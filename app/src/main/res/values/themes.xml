<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AirDropsio" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ad_blue</item>
        <item name="colorPrimaryVariant">@color/ad_light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ad_lightest_blue</item>
        <item name="colorSecondaryVariant">@color/ad_gray</item>
        <item name="colorOnSecondary">@color/ad_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/ad_blue</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="MyDatePicker" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="MySwitchButton" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>
</resources>